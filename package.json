{
  "name": "poc-server",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "back:dev": "npm --workspace=apps/back run dev",
    "back:build": "npm --workspace=apps/back run build",
